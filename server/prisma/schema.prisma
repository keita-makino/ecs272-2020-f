  height   Float   @default(5)
  id       Int     @default(autoincrement()) @id
  markSize Float   @default(5)
  user     User
}

model User {
  email    String   @default("") @unique
  id       Int      @default(autoincrement()) @id
  name     String   @default("")
  password String   @default("")
  room     Room[]
  setting  Setting?
}